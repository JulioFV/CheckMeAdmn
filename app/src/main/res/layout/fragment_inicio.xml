<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Inicio"
    android:background="@color/fondo"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/regreso_administrador"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/flecha_de_regreso"


            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Administrador"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/config_administrador"

            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/conf"
            android:clickable="true"
            android:focusable="true"


            android:layout_marginStart="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/regreso_uduario"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/adulto"
                android:layout_margin="30dp"
                android:layout_marginLeft="20dp"

                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:text="Nombre : "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/adm_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Brian "
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"

                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:text="Apellido Paterno"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/adm_apellido_paterno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Hernandez "
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"

                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:text="ApellidoMaterno : "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/adm_apellido_materno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Hernandez"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"

                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:text="Institucion"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/adm_institucion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="ITSOEH"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"


                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:text="Id"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/id_administrador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="1324354657"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"

                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:text="Genero : "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/administrador_genero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="helicoptero"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"

                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/black"/>


                </LinearLayout>






            </LinearLayout>












</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Mi Perfil Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/fondo"

                android:id="@+id/adm_card_carreras">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:src="@drawable/carreras"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/btnMyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carreras"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="16dp"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <!-- Mis Grupos Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/fondo"

                    android:id="@+id/adm_card_asignaturas">

                <TextView
                    android:id="@+id/btnMyGroups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Asignaturas"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/asignatura"
                    android:layout_marginLeft="350dp"
                    android:layout_marginTop="5dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Pase de Lista Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/fondo"

                android:id="@+id/adm_card_Docentes">

                <TextView
                    android:id="@+id/btnAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Docentes"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="16dp"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:src="@drawable/docente"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Mis Tutorados Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/fondo"

                android:id="@+id/adm_card_Estudiantes">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar"
                    android:layout_marginLeft="350dp"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Estudiantes"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </androidx.cardview.widget.CardView>

            <!-- Agregar Tutorados Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/fondo"

                android:id="@+id/adm_card_periodos">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/periodo"
                    android:layout_marginLeft="10dp"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Periodos"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="16dp"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
            <!-- Agregar Tutorados Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/fondo"

                android:id="@+id/adm_card_papas">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/padres"
                    android:layout_marginLeft="350dp"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Padres de Familia"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="16dp"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Sección de botones (CardViews) -->



    </LinearLayout>
</LinearLayout>

