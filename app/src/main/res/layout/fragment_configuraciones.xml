<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".configuraciones"
    android:orientation="vertical"
    android:background="@color/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/regreso_administrador"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/flecha_de_regreso"


            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Configuracioes"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_2"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="8dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/regreso_uduario"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/cuenta"
                android:layout_marginLeft="10dp"

                android:layout_marginStart="130dp"/>
            <ImageView
                android:id="@+id/regreso_editar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lapiz"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"


            />



        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="Nombre : "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="jesus"
                    android:enabled="false"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"

                    android:id="@+id/conf_adm_nombre"/>

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Apellido Paterno : "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hernandez"
                android:enabled="false"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"

                android:id="@+id/conf_adm_appp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Apellido Materno : "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="jesus"
                android:enabled="false"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"

                android:id="@+id/conf_adm_apm"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Institucion : "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="jesus"
                android:enabled="false"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"

                android:id="@+id/conf_adm_institucion"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Genero : "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>
            <Spinner
                android:layout_width="5dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:hint="Sexo"
                android:entries="@array/genero"
                android:spinnerMode="dropdown"
                android:textColorHint="@color/azul2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Correo : "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="jesus"
                android:enabled="false"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"

                android:id="@+id/conf_adm_correo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Contraseña : "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="jesus"
                android:enabled="false"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"

                android:id="@+id/conf_adm_contrasena"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/adm_card_carreras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="@color/fondo"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_gravity="center">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardar Cambios"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:layout_marginLeft="130dp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>



    </LinearLayout>



</LinearLayout>